<% layout("/layouts/boilerplate") %>

<h4 class="text-center mt-5">Login</h4>
<div class="row">
  <div class="col-lg-6 col-md-7 position-absolute top-50 start-50 translate-middle">
    <form method="post" action="/login" novalidate class="needs-validation">
      <div>
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          class="form-control"
          required
        />
      </div>
      <br>
      <div>
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          class="form-control"
          required
        />
      </div>
      <br>
      <button class="btn btn-success">Login</button>
    </form>
  </div>
</div>