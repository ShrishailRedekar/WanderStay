<% layout("/layouts/boilerplate") %>

<body>
  <h3 class="mt-3 text-center">All Listings</h3>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-3 mt-3">
    <% for(let listing of allListings) { %>
    <a href="/listings/<%= listing.id %>" class="cardLink">
      <div class="card col listing-card" style="width: 18rem">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing image"
          style="height: 19rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b> <%= listing.title %> </b>
            <br />
            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
